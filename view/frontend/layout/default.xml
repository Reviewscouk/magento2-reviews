<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="before.body.end">
            <block class="Reviewscouk\Reviews\Block\Richsnippet" name="reviews.rich.snippet" as="reviews_snippet"
                   after="-" template="Reviewscouk_Reviews::rich_snippet.phtml"/>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Reviewscouk\Reviews\Block\Product\Reviewwidget" name="reviews.rating.snippet" as="reviews_rating_snippet"
                   after="-" template="Reviewscouk_Reviews::rating_snippet.phtml"/>
        </referenceContainer>
    </body>
</page>